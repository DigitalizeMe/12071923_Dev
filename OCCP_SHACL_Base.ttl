@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix occp:  <http://www.semanticweb.org/albrechtvaatz/ontologies/2022/9/cMod_V0.1#> .
@prefix time:  <http://www.w3.org/2006/time#> .
@prefix osh:   <http://www.occpshape.de/shape#> .

osh:GeneralTimeShape a sh:NodeShape ;
    sh:targetClass time:TemporalEntity ;
    sh:property [
        sh:path ( time:hasBeginning time:hasEnd time:hasTime ) ;
        sh:class time:Instant ;
        sh:minCount 1 ;
        sh:message "Property time:hasBeginning, time:hasEnd, or time:hasTime must refer to at least one time:Instant." ;
        sh:severity sh:Violation ;
    ] ;
    sh:property [
        sh:path ( occp:hasActualBeginning occp:hasActualEnd occp:hasActualTime ) ;
        sh:class time:Instant ;
        sh:maxCount 1 ;
        sh:message "Property occp:hasActualBeginning, occp:hasActualEnd, or occp:hasActualTime must refer to at most one time:Instant." ;
        sh:severity sh:Violation ;
    ] .

osh:InstantTimeShape a sh:NodeShape ;
    sh:targetClass time:Instant ;
    sh:property [
        sh:path occp:hasActualTime ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:message "Property occp:hasActualTime must have at most one value of type xsd:date." ;
        sh:severity sh:Violation ;
    ] ;
    sh:property [
        sh:path occp:hasEstimatedTime ;
        sh:datatype xsd:date ;
        sh:message "Property occp:hasEstimatedTime must have values of type xsd:date." ;
        sh:severity sh:Violation ;
    ] .